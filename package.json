{
  "name": "daebot",
  "version": "1.1.3",
  "description": "World of Warcraft Guild Management Discord Bot",
  "main": "main.js",
  "author": "Drizzyt",
  "license": "MIT",
  "scripts": {
    "start": "node main.js",
    "dev": "vite",
    "build": "vite build",
    "build:bot": "pkg main.js --targets node20-win-x64 --output dist/bot.exe --compress Brotli && node scripts/copy-native-modules.js",
    "deploy": "node deploy-commands.js",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "version": "node scripts/update-version.js",
    "release": "node scripts/build-release.js"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "better-sqlite3": "^12.4.1",
    "canvas": "^3.2.0",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.9.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@yao-pkg/pkg": "^6.9.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.0.0"
  },
  "pkg": {
    "assets": [
      "commands/**/*.js",
      "events/**/*.js",
      "helpers/**/*.js",
      "services/**/*.js",
      "utils/**/*.js",
      "global_vars/**/*.js",
      "images/**/*",
      "config.json",
      "node_modules/better-sqlite3/build/Release/*.node",
      "node_modules/canvas/build/Release/*.node",
      "node_modules/canvas/build/Release/*.dll"
    ],
    "targets": [
      "node20-win-x64"
    ],
    "outputPath": "dist"
  }
}
