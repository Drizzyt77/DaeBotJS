{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "DaeBot",
  "version": "1.1.6",
  "identifier": "com.daebot.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build && npm run build:bot"
  },
  "app": {
    "windows": [
      {
        "title": "DaeBot - WoW Character Manager",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../dist/bot.exe",
      "../dist/*.dll",
      "../dist/*.node",
      "../dist/commands/*.js"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Drizzyt77/DaeBotJS/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUwRERGMkM4RjMzNDg1RTAKUldUZ2hUVHp5UExkNEJYcHJ2akZSUmhjN3ZpU201aG10ZjMzcU5QTzFZNytQUisxcit5c21ydUYK",
      "windows": {
        "installMode": "basicUi"
      }
    }
  }
}
